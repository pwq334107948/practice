<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="90dp" />
                    <gradient
                        android:centerX="70%"
                        android:startColor="#AD7CFF4C"
                        android:centerColor="#00045C17"
                        android:endColor="#AD6DFF4C"
                        android:type="linear"
                        />
                </shape>
            </item>
            <item android:bottom="10dp" android:left="3dp" android:right="8dp" android:top="4dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:radius="80dp"
                        />
                    <gradient
                        android:angle="90"
                        android:centerX="50%"
                        android:centerColor="@color/transparent"
                        android:startColor="#7A08FA0C"
                        android:endColor="@color/transparent"
                        android:type="radial"
                        />
                    <size
                        android:width="270dp"
                        android:height="60dp"
                        />
                    <stroke
                        android:width="5dp"
                        android:color="#B208FA14"
                        />
                </shape>
            </item>
            <item android:bottom="10dp" android:left="3dp" android:right="8dp" android:top="4dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:radius="80dp"
                        />

                    <gradient
                        android:angle="90"
                        android:centerX="60%"
                        android:centerColor="@color/transparent"
                        android:startColor="@color/transparent"
                        android:endColor="#A918FA08"
                        android:type="linear"
                        />

                    <size
                        android:width="200dp"
                        android:height="60dp"
                        />
                </shape>
            </item>

            <item android:bottom="10dp" android:left="3dp" android:right="8dp" android:top="4dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:radius="80dp"
                        />

                    <gradient
                        android:angle="180"
                        android:centerX="5%"
                        android:centerColor="#8008FA0C"
                        android:startColor="@color/transparent"
                        android:endColor="@color/transparent"
                        android:gradientRadius="360"
                        android:type="sweep"
                        />

                    <size
                        android:width="200dp"
                        android:height="60dp"
                        />
                </shape>
            </item>
            <item android:bottom="10dp" android:left="3dp" android:right="8dp" android:top="4dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:radius="50dp"
                        />

                    <gradient
                        android:angle="180"
                        android:centerX="95%"
                        android:centerColor="@color/transparent"
                        android:startColor="#C808FA61"
                        android:endColor="#4F08FA30"
                        android:gradientRadius="180"
                        android:type="sweep"
                        />

                    <size
                        android:width="200dp"
                        android:height="60dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>